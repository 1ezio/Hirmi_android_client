<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".main_login">

    <RelativeLayout
        android:id="@+id/relative_id"
        android:layout_width="match_parent"

        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="𝙂𝙖𝙩𝙞𝙨𝙝𝙚𝙚𝙡"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"

            android:textSize="40sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="220dp"
        android:layout_height="480dp"
        android:background="@drawable/gradient2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_id">

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"

        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:background="@drawable/gradient_shape_login"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/relative_id"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:id="@+id/email_id"
            android:layout_marginTop="50dp"
            android:hint="E-Mail" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/pass_id"
            android:inputType="textPassword"
            android:layout_height="60dp"
            android:hint="Password"

            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/forgot_id"
            android:clickable="true"
            android:gravity="right"
            android:text="Reset Password ? "
            android:textColor="@color/colorAccent" />


    </LinearLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/button_design"
        android:id="@+id/login_id"
        android:text="𝑳𝒐𝒈𝒊𝒏"
        android:textSize="20sp"

        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="20dp"
        android:gravity="bottom"
        android:text="   𝑳𝒐𝒈𝒊𝒏"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/relative_id" />

</androidx.constraintlayout.widget.ConstraintLayout>