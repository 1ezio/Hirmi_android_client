<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".main_login">

    <RelativeLayout
        android:id="@+id/relative_id"
        android:layout_width="match_parent"

        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="𝙂𝙖𝙩𝙞𝙨𝙝𝙚𝙚𝙡"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"

            android:textSize="40sp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
           />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="220dp"
        android:layout_height="480dp"
        android:background="@drawable/tilt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_id">

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="50dp"

        android:paddingLeft="50dp"
        android:orientation="vertical"
        android:paddingRight="50dp"
        android:background="@drawable/gradient_shape_login"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/relative_id"
        >

        <EditText
            android:id="@+id/name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"


            android:hint="Enter Name"

            android:textSize="20sp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:id="@+id/reg_id"
            android:layout_marginTop="10dp"
            android:hint="E-Mail" />



        <EditText
            android:id="@+id/mob_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/reg_id"

            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"

            android:hint="Mobile"

            android:textSize="20sp" />




        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/e_id" />





    </LinearLayout>
    <Button
        android:layout_width="130dp"
        android:id="@+id/r_id"
        android:layout_height="60dp"
        android:background="@drawable/button_design"
        android:text="𝙍𝙚𝙜𝙞𝙨𝙩𝙚𝙧"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:gravity="bottom"
        android:text="𝑹𝒆𝒈𝒊𝒔𝒕𝒓𝒂𝒕𝒊𝒐𝒏"
        android:textColor="@color/colorAccent"

        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relative_id" />



</androidx.constraintlayout.widget.ConstraintLayout>